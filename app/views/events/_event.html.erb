<div class="col">
    <div class="card custom_card">
      <img src="https://media.istockphoto.com/id/1478375497/fr/photo/des-amis-dansent-au-festival.jpg?s=2048x2048&w=is&k=20&c=fIz_Fn7SexMUa4giD1K_wK81Z64clzlK5YjMToVb1d8=" class="card-img-top"
        alt="Hollywood Sign on The Hill" />
      <div class="card-body">
        <h5 class="card-title text-center"> <%=event.category.capitalize%> </br> </h5>
        <div class="row text-center">
          <h6> <i class="bi bi-lightning-charge-fill"></i> Niveau <%= event.level %> </h6>
          <h6><i class="bi bi-person-circle"></i> Places disponibles : <%= event.available_seats %></h6>
          <h6> <i class="bi bi-calendar3-event"></i> <%= event.start_date.strftime("%d/%m %H:%M") %> </h6>
        </div>

          <p class="card-footer bg-transparent">
          <div class="btn-group d-flex justify-content-around my-3", role="group">
          <%= button_to "Voir plus", event_path(event), method: :get, class: "btn btn-secondary btn_size_card" %>
        </div>
        </p>
      </div>
    </div>
  </div>