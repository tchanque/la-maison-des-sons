<div class="col">
    <div class="card custom_card">
      <%= image_tag(event.get_image_filename, alt: "Event's image", class: "card-img-top") %>
      <div class="date_badge">
        <span class="badge">
          <h5 class="d-flex pt-2"><%= event.start_date.strftime("%d/%m Ã  %Hh%M") %></h5>
        </span>
      </div>
      <div class="card-body">
        <h4 class="card-title text-center"> <%=event.category %> </br> </h4>
        <!-- Add an empty div (invisible) so that it leaves a space and match the other cards height-->
        <h5 class="invisible"> "." </h5>
        
        <div class="row text-center">
          <h6> <i class="bi bi-pin-map-fill"></i> <%= event.location.truncate(15) %> </h6>
          <h6> <%= event.description == "" ? "Venez nombreux!" : event.description.truncate(20) %> </h6>
        </div>
          <p class="card-footer bg-transparent">
            <div class="btn-group d-flex justify-content-around my-3", role="group">
              <%= button_to "Voir plus", event_path(event), method: :get, class: "btn btn-secondary btn_size_card" %>
            </div>
          </p>
      </div>
    </div>
  </div>