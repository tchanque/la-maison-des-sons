<p style="color: green"><%= notice %></p>


<div class="d-flex flex-column align-items-center my-5" id="events">
  <h1 class="w-75 text-center header_section">Nos évènements</h1>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 m-3 g-5">
    <% @events.each do |event| %>
      <%= render event %>
    <% end %>
  </div>
</div>

<div class="d-flex flex-column align-items-center">
    <h1 class="w-75 text-center header_section align-items-center">Agenda</h1>
            <% @current_attendances.each do |attendance| %>
              <div class="container">
              <div class="row row-striped">
                <div class="col-2 text-right">
                  <h1 class="display-4"><span class="badge badge-secondary"><%= attendance.event.start_date.strftime("%d") %></span></h1>
                  <h2><%= attendance.event.start_date.strftime("%b") %></h2>
                </div>
                <div class="col-10">
                  <h3 class="text-uppercase"><strong><%= attendance.event.category %>  (<%= attendance.event.instrument %>)</strong></h3>
                  <ul class="list-inline">
                      <li class="list-inline-item"><i class="fa fa-calendar-o" aria-hidden="true"></i> <%= attendance.event.start_date.strftime("%A") %></li>
                    <li class="list-inline-item"><i class="fa fa-clock-o" aria-hidden="true"></i> 12:30 PM - 2:00 PM</li>
                    <li class="list-inline-item"><i class="fa fa-location-arrow" aria-hidden="true"></i> Cafe</li>
                  </ul>
                  <p>Lorem ipsum dolsit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                </div>
              </div>
            </div>
           <% end %>
</div>